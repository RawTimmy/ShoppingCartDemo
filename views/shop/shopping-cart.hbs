{{# if products }}

  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <div class="panel panel-info">
        <div class="panel-heading text-center"><strong>Shopping Cart</strong></div>
          <ul class="list-group">
            {{# each products}}
              <li class="list-group-item">
                <a href="/remove/{{ this.item._id }}" class="badge badge-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                <a href="/reduce/{{ this.item._id }}" class="badge badge-danger">-</a>
                <span class="badge">{{ this.qty }}</span>
                <a href="/addone/{{ this.item._id }}" class="badge badge-success">+</a>

                <strong>{{ this.item.title }}</strong>
                <span class="label label-success">${{ this.price }}</span>
                <div class="btn-group">
                  <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                  <ul class="dropdown-menu">
                    <li><a href="#">Think more</a></li>
                  </ul>
                </div>
              </li>
            {{/each}}
          </ul>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <strong>Total: ${{ totalPrice }}</strong>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <a href="/checkout" type="button" class="btn btn-success" style="float: right">Checkout</a>
    </div>
  </div>

{{ else }}

  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <div class="panel panel-info panel-danger">
        <div class="panel-heading text-center"><strong>Shopping Cart</strong></div>
        <div class="panel-body">No items in the cart.</div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <a href="/" type="button" class="btn btn-info btn-block" >Go Back to Shopping Page</a>
    </div>
  </div>

{{/if}}
